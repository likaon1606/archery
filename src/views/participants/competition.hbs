<div class="container">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">Lugares de los participantes</h3>
        {{#if participants}}

        <table class="table text-center">
            <thead>
                <tr class="table-dark prueba">
                    <th scope="col">Lugar</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Apellido</th>
                    <th scope="col">Puntos</th>
                </tr>
            </thead>
            <tbody>
                {{#each participants}}
                <tr class="prueba">
                    <td>{{place}}</td>
                    <td>{{name}}</td>
                    <td>{{lastname}}</td>
                    <td>{{points}}</td>
                {{/each}}
            </tbody>
            <tfoot>
                <tr class="table-primary fw-bold fs-4">
                    <td colspan="4">Lugares en competencia</td>
                </tr>
            </tfoot>
        </table>
    </div>
    {{else}}
    <div class="card text-center mx-auto" style="width:350px">
        <div class="card-header">
            <h3>Debes Crear un Participante</h3>
        </div>
        <div class="card-body">
            <p>Presiona este botÃ³n para registrar un nuevo participante</p>
            <a href="/add" class="btn btn-primary">Ir a crear</a>
        </div>

        {{/if}}
    </div>
</div>